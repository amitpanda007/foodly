# Docker Compose Configuration
# Copy this to .env at project root for docker-compose

# PostgreSQL Database
POSTGRES_USER=foodly
POSTGRES_PASSWORD=foodly_password
POSTGRES_DB=foodly_db
# Optional: override full DB URL (falls back to values above)
DATABASE_URL=postgresql+asyncpg://foodly:foodly_password@postgres:5432/foodly_db

# Ollama Configuration (used by docker-compose)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# LLM Provider for Backend: "ollama", "openai", "gemini"
LLM_PROVIDER=ollama

# Optional: Cloud LLM API Keys (if not using Ollama)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-3-pro-preview

# Frontend API URL (for Docker build)
VITE_API_URL=http://localhost:8001

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001,http://frontend:80
